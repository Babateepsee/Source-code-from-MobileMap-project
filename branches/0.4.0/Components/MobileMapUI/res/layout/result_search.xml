<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/result_search_linearlayout_result_search"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	-
	-
	<LinearLayout android:id="@+id/result_search_linearlayout_search"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="match_parent" android:gravity="center">
		<EditText android:id="@+id/result_search_edittext_search"
			android:background="@android:drawable/editbox_background_normal"
			android:layout_height="40dip" android:layout_width="260dip"
			android:hint="Search...!!!" android:singleLine="true" />
		-
		-
		<LinearLayout android:orientation="vertical"
			android:layout_height="wrap_content" android:layout_width="30dip">
			<Button android:id="@+id/result_search_button_search"
				android:layout_height="30dip" android:layout_width="fill_parent"
				android:background="@android:drawable/ic_menu_search" />
			<Button android:id="@+id/result_search_button_expand"
				android:layout_gravity="center" android:layout_height="10dip"
				android:layout_width="wrap_content" android:background="@android:drawable/arrow_down_float" />
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="match_parent" android:gravity="center">
		<ListView android:id="@+id/result_search_listview_result"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" />
		<LinearLayout android:id="@+id/result_search_linearlayout_expand"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:layout_gravity="center_horizontal"
			android:background="@android:drawable/alert_dark_frame">
			-
			<LinearLayout android:id="@+id/result_search_linearlayout_category"
				android:orientation="horizontal" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="5dip">
				<TextView android:id="@+id/result_search_textview_category"
					android:text="Category" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@android:color/black"
					android:layout_gravity="center|center_horizontal" />
				<Spinner android:id="@+id/result_search_spinner_category"
					android:layout_height="40dip" android:layout_width="150dip"
					android:layout_marginLeft="10dip" />
				<CheckBox android:id="@+id/result_search_checkbox_allcategory"
					android:checked="false" android:layout_width="wrap_content"
					android:layout_height="40dip" android:layout_marginLeft="10dip" />
				<TextView android:id="@+id/result_search_textview_labelcheck_all"
					android:textColor="@android:color/black" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="All"
					android:layout_gravity="center|center_horizontal" />
			</LinearLayout>
			<View android:layout_height="0.5dip" android:layout_width="fill_parent"
				android:background="@android:color/darker_gray" />
			-
			-
			<LinearLayout android:orientation="horizontal"
				android:id="@+id/result_search_linearlayout_position"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="5dip">
				<TextView android:id="@+id/result_search_textview_position"
					android:text="Position" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@android:color/black"
					android:layout_gravity="center|center_horizontal" />
				-
				-
				<LinearLayout android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="15dip">
					-
					-
					<LinearLayout android:orientation="horizontal"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:layout_marginLeft="5dip" android:layout_gravity="center_vertical">
						<TextView android:id="@+id/result_search_textview_longitude"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:textColor="@android:color/black" android:text="Longitude :"
							android:layout_gravity="center_vertical" />
						<EditText android:id="@+id/result_search_edittext_longitude"
							android:singleLine="true" android:layout_height="wrap_content"
							android:layout_marginLeft="2dip" android:layout_width="75dip"
							android:background="@android:drawable/editbox_background"
							android:enabled="false" />
					</LinearLayout>
					-
					-
					<LinearLayout android:orientation="horizontal"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:layout_marginLeft="5dip" android:layout_gravity="center_vertical">
						<TextView android:id="@+id/result_search_textview_latitude"
							android:text="Latitude    :" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="@android:color/black"
							android:layout_gravity="center_vertical" />
						<EditText android:singleLine="true"
							android:layout_height="wrap_content" android:id="@+id/result_search_edittext_latitude"
							android:layout_marginLeft="4dip" android:layout_width="75dip"
							android:background="@android:drawable/editbox_background"
							android:enabled="false" />
					</LinearLayout>
					-
					-
					<LinearLayout android:orientation="horizontal"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:layout_marginLeft="5dip" android:layout_gravity="center_vertical">
						<TextView android:id="@+id/result_search_textview_radius"
							android:text="Radius      :" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:textColor="@android:color/black"
							android:layout_gravity="center|center_horizontal" />
						<EditText android:singleLine="true"
							android:layout_height="wrap_content" android:id="@+id/result_search_edittext_radius"
							android:layout_marginLeft="5dip" android:layout_width="75dip"
							android:background="@android:drawable/editbox_background"
							android:focusable="true" />
					</LinearLayout>
				</LinearLayout>

				<LinearLayout android:orientation="vertical"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="2dip">
					<ToggleButton android:id="@+id/result_search_togglebutton_current"
						android:layout_width="70dip" android:layout_height="wrap_content"
						android:layout_marginTop="5dip" android:textOn="Current"
						android:textOff="Current" android:layout_gravity="center_vertical"
						android:checked="false" />
					<Button android:id="@+id/result_search_button_pick"
						android:textColor="@android:color/black" android:text="Pick"
						android:layout_width="70dip" android:layout_marginTop="5dip"
						android:layout_height="wrap_content" android:background="@android:drawable/btn_default"
						android:layout_gravity="center_vertical" />
				</LinearLayout>
				/
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>