<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:layout_width="match_parent"
		android:layout_height="wrap_content" android:layout_weight="1">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/dialog_login_register_ogri" android:layout_height="wrap_content"
			android:layout_width="wrap_content">
			
			<TextView android:id="@+id/dialog_login_register_label_header_spacing"
				android:layout_alignParentLeft="true" android:layout_height="10px"			
				android:padding="0dip" 
				android:layout_width="fill_parent" />
			
			<TextView android:id="@+id/dialog_login_register_label_loginname"
				android:layout_alignParentLeft="true"
				android:layout_alignBaseline="@+id/dialog_login_register_edit_loginname"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_loginname"/>
			<EditText android:id="@+id/dialog_login_register_edit_loginname"
				android:layout_height="wrap_content" android:layout_width="180dip"
				android:layout_toRightOf="@+id/dialog_login_register_label_loginname"
				android:background="@android:drawable/editbox_background"
				android:layout_below="@+id/dialog_login_register_label_header_spacing"
				android:singleLine="true" />

			<TextView android:id="@+id/dialog_login_register_label_name_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_label_loginname"
				android:layout_below="@+id/dialog_login_register_edit_loginname"
				android:padding="0dip" android:layout_height="2px"
				android:background="#1C1C1C" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_width="fill_parent" />

			<TextView android:id="@+id/dialog_login_register_label_password"
				android:layout_alignLeft="@+id/dialog_login_register_label_loginname"
				android:layout_alignBaseline="@+id/dialog_login_register_edit_password"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_password"/>
			<EditText android:id="@+id/dialog_login_register_edit_password"
				android:inputType="textPassword" android:layout_below="@+id/dialog_login_register_label_name_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_edit_loginname"
				android:layout_height="wrap_content" android:layout_width="180dip"
				android:background="@android:drawable/editbox_background"
				android:singleLine="true" />
			<TextView android:id="@+id/dialog_login_register_label_password_confirm"
				android:layout_alignLeft="@+id/dialog_login_register_label_loginname"
				android:layout_alignBaseline="@+id/dialog_login_register_edit_password_confirm"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_password_confirm"/>
			<EditText android:id="@+id/dialog_login_register_edit_password_confirm"
				android:inputType="textPassword" android:layout_below="@+id/dialog_login_register_edit_password"
				android:layout_alignLeft="@+id/dialog_login_register_edit_loginname"
				android:layout_height="wrap_content" android:layout_width="180dip"
				android:background="@android:drawable/editbox_background"
				android:singleLine="true" />

			<TextView android:id="@+id/dialog_login_register_label_address_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_label_password_confirm"
				android:layout_below="@+id/dialog_login_register_edit_password_confirm"
				android:padding="0dip" android:layout_height="2px"
				android:background="#1C1C1C" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_width="fill_parent" />

			<TextView android:id="@+id/dialog_login_register_label_address"
				android:layout_alignLeft="@+id/dialog_login_register_label_loginname"
				android:layout_alignBaseline="@+id/dialog_login_register_edit_address"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_address"/>
			<EditText android:id="@+id/dialog_login_register_edit_address"
				android:layout_below="@+id/dialog_login_register_label_address_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_edit_loginname"
				android:layout_height="wrap_content" android:layout_width="180dip"
				android:background="@android:drawable/editbox_background"
				android:lines="2" />

			<TextView android:id="@+id/dialog_login_register_label_phone_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_label_address"
				android:layout_below="@+id/dialog_login_register_edit_address"
				android:padding="0dip" android:layout_height="2px"
				android:background="#1C1C1C" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_width="fill_parent" />

			<TextView android:id="@+id/dialog_login_register_label_phone"
				android:layout_alignLeft="@+id/dialog_login_register_label_address"
				android:layout_alignBaseline="@+id/dialog_login_register_btPhoneAdd"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_phone"/>
			<Button android:id="@+id/dialog_login_register_btPhoneAdd"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/dialog_login_register_label_phone_seperation"
				android:layout_alignParentRight="true" android:background="@android:drawable/ic_menu_add"
				android:onClick="onbtClick" />
			<TableLayout android:id="@+id/dialog_login_register_table_Phone"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_below="@+id/dialog_login_register_btPhoneAdd"
				android:layout_alignLeft="@+id/dialog_login_register_edit_address"
				android:layout_alignParentRight="true" android:stretchColumns="0">
			</TableLayout>

			<TextView android:id="@+id/dialog_login_register_label_email_seperation"
				android:layout_alignLeft="@+id/dialog_login_register_label_phone"
				android:layout_below="@+id/dialog_login_register_table_Phone"
				android:padding="0dip" android:layout_height="2px"
				android:background="#1C1C1C" android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip" android:layout_width="fill_parent" />

			<TextView android:id="@+id/dialog_login_register_label_email"
				android:layout_alignLeft="@+id/dialog_login_register_label_phone"
				android:layout_alignBaseline="@+id/dialog_login_register_btEmailAdd"
				android:padding="10dip" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:text="@string/label_email"/>
			<Button android:id="@+id/dialog_login_register_btEmailAdd"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_below="@+id/dialog_login_register_label_email_seperation"
				android:layout_alignParentRight="true" android:background="@android:drawable/ic_menu_add"
				android:onClick="onbtClick" />
			<TableLayout android:id="@+id/dialog_login_register_table_Email"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:layout_below="@+id/dialog_login_register_btEmailAdd"
				android:layout_alignLeft="@+id/dialog_login_register_edit_address"
				android:layout_alignParentRight="true" android:stretchColumns="0">
			</TableLayout>
			<TextView android:id="@+id/dialog_login_register_label_spacing"
				android:layout_alignLeft="@+id/dialog_login_register_label_phone"
				android:layout_below="@+id/dialog_login_register_table_Email"
				android:padding="0dip" android:layout_height="wrap_content"
				android:layout_width="fill_parent" />


		</RelativeLayout>
	</ScrollView>
	<LinearLayout android:orientation="horizontal"
		android:layout_below="@+id/dialog_login_register_label_spacing"
		android:background="@android:drawable/bottom_bar" android:paddingLeft="50dip"
		android:paddingTop="10dip" android:paddingRight="50dip"
		android:paddingBottom="5dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/dialog_login_register_button_ok"
			android:layout_width="0dip" android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:background="@android:drawable/btn_default" android:onClick="onbtClick" android:text="@string/lable_update"/>
		<Button android:id="@+id/dialog_login_register_button_cancel"
			android:layout_width="0dip" android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:background="@android:drawable/btn_default" android:text="@string/label_cancel"
			android:onClick="onbtClick"/>
	</LinearLayout>
</LinearLayout>
