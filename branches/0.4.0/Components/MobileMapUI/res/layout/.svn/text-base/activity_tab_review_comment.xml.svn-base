<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:visibility="gone">
	<LinearLayout android:id="@+id/activity_tab_review_comment_layout_infomation"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_alignParentLeft="true">
		<ImageView android:layout_width="wrap_content"
			android:id="@+id/activity_tab_review_comment_avatar"
			android:layout_height="wrap_content" android:src="@drawable/icon"></ImageView>
		<LinearLayout android:layout_width="wrap_content"
			android:id="@+id/linearLayout3" android:orientation="vertical"
			android:layout_height="wrap_content">
			<ImageView android:id="@+id/activity_tab_review_comment_picture"
				android:layout_height="wrap_content" android:src="@drawable/icon"
				android:layout_width="wrap_content"></ImageView>
			<TextView android:text="TextView"
				android:id="@+id/activity_tab_review_comment_lable_name"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:text="TextView"
				android:id="@+id/activity_tab_review_comment_lable_address"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>

	</LinearLayout>
	<ListView android:layout_width="fill_parent"
		android:layout_below="@+id/activity_tab_review_comment_layout_infomation"
		android:id="@+id/activity_tab_review_comment_listview_comment" android:layout_height="wrap_content"/>
	<EditText android:layout_height="wrap_content"
		android:id="@+id/activity_tab_review_comment_edit_comment"
		android:layout_below="@+id/activity_tab_review_comment_listview_comment"
		android:layout_alignRight="@+id/activity_tab_review_comment_listview_comment"
		android:layout_width="120dp" android:background="@android:drawable/editbox_background"
		android:hint="Comment">
	</EditText>
	<Button android:id="@+id/activity_tab_review_comment_button_postcomment"
		android:layout_height="wrap_content" android:text="Post comment"
		android:layout_below="@+id/activity_tab_review_comment_edit_comment"
		android:layout_width="wrap_content" android:layout_alignLeft="@+id/activity_tab_review_comment_edit_comment"
		android:layout_alignRight="@+id/activity_tab_review_comment_edit_comment"
		android:background="@android:drawable/btn_default_small"></Button>

</RelativeLayout>
