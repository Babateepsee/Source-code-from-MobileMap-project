	<!-- Begin layout POI information -->

	<LinearLayout android:id="@+id/main_poi_information_linearlayout_PoiInformation"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:background="@android:drawable/screen_background_light"
		android:visibility="gone">
		<View android:background="#FF909090" android:id="@+id/viewStub1"
			android:layout_height="1dp" android:layout_width="fill_parent"></View>
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/main_poi_information_relativelayout_solid"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingTop="2dp">
			<Button android:id="@+id/main_poi_information_button_favorite"
				android:layout_width="25dp" android:layout_height="25dp"
				android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
				android:background="@android:drawable/btn_star_big_off"></Button>

			<RatingBar android:id="@+id/main_poi_information_rating_poi"
				android:numStars="5" android:stepSize="1.0" android:rating="5"
				style="?android:attr/ratingBarStyleSmall" android:layout_toRightOf="@+id/main_poi_information_button_favorite"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></RatingBar>

			<ImageButton android:id="@+id/main_poi_information_imagebutton_expand"
				android:layout_width="30dp" android:layout_height="25dp"
				android:src="@drawable/icon_up" android:background="@drawable/btn_square_overlay_normal_1"
				android:layout_toLeftOf="@+id/main_poi_information_imagebutton_close"
				android:layout_alignParentTop="true"></ImageButton>

			<ImageButton android:id="@+id/main_poi_information_imagebutton_close"
				android:layout_width="30dp" android:layout_height="25dp"
				android:background="@drawable/btn_square_overlay_normal_1"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"></ImageButton>

			<ImageView android:id="@+id/main_poi_information_imagebutton_picture"
				android:layout_width="70dp" android:layout_height="70dp"
				android:contentDescription="Image adress" android:layout_below="@+id/main_poi_information_rating_poi"
				android:layout_alignRight="@+id/main_poi_information_imagebutton_close"
				android:src="@drawable/icon" android:paddingLeft="10dp"></ImageView>

			<LinearLayout android:id="@+id/main_poi_information_linearlayout_detail"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:layout_below="@+id/main_poi_information_rating_poi"
				android:layout_alignLeft="@+id/main_poi_information_rating_poi"
				android:layout_width="220dip">
				<TextView android:text="Name"
					android:id="@+id/main_poi_information_label_name"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
				<TextView android:text="Address"
					android:id="@+id/main_poi_information_label_address"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000" android:maxLines="4"></TextView>
				<TextView android:text="Longtitude"
					android:id="@+id/main_poi_information_label_longtitude"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000" android:visibility="gone"></TextView>
				<TextView android:text="Latitude"
					android:id="@+id/main_poi_information_label_latitude"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000" android:visibility="gone"></TextView>
				<TextView android:text="Description"
					android:id="@+id/main_poi_information_label_description"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/main_poi_information_linearlayout_button"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_below="@+id/main_poi_information_linearlayout_detail"
				android:paddingTop="5dip" android:gravity="center"
				android:layout_height="wrap_content">
				<Button android:id="@+id/main_poi_information_button_center"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Center" android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_navigate"
					android:background="@android:drawable/btn_default"
					android:visibility="visible"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.2" android:text="Navigate"
					android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_call"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:visibility="gone"
					android:layout_weight="1.0" android:text="Call" android:textSize="12dp"></Button>					
				<Button android:text="Details"
					android:id="@+id/main_poi_information_button_advance"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_comment"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Comment" android:textSize="12dp"
					android:state_pressed="true"></Button>
				<Button android:id="@+id/main_poi_information_button_rating"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Rate" android:textSize="12dp"
					android:state_pressed="true"></Button>
			</LinearLayout>

			
			
			<LinearLayout android:id="@+id/main_poi_information_linearlayout"
				android:orientation="vertical" android:layout_width="fill_parent" 				
				android:layout_height="60dp" android:visibility="gone" 
				android:background="@android:drawable/bottom_bar"
				android:layout_below="@+id/main_poi_information_linearlayout_button">
				

			</LinearLayout>

			<!--  Begin layout for adding comment-->
			<LinearLayout android:background="@android:drawable/bottom_bar"
				android:id="@+id/main_poi_information_linearlayout_addcomment"
				android:layout_width="match_parent" android:orientation="vertical"
				android:weightSum="1" android:layout_height="wrap_content"
				android:paddingTop="8px" android:layout_below="@+id/main_poi_information_linearlayout_button"
				android:layout_weight="0.05" android:visibility="gone">
				<RelativeLayout android:id="@+id/relativeLayout1"
					android:layout_width="match_parent" android:layout_height="95dp"
					android:paddingLeft="5px">
					<EditText android:id="@+id/main_edittext_comment"
						android:inputType="textMultiLine" android:layout_alignParentLeft="true"
						android:layout_height="match_parent" android:layout_width="245dp"
						android:gravity="top" android:paddingLeft="5px"
						android:layout_toLeftOf="@+id/main_button_post">
					</EditText>
					<Button android:layout_height="wrap_content" android:text="Post"
						android:id="@+id/main_button_post" android:layout_width="wrap_content"
						android:layout_alignParentTop="true" android:layout_marginTop="22dp"
						android:layout_alignParentRight="true">
					</Button>
				</RelativeLayout>
			</LinearLayout>
			<!--  End layout for adding comment-->

		</RelativeLayout>
	</LinearLayout>
	<!-- The end layout POI information -->
</RelativeLayout>