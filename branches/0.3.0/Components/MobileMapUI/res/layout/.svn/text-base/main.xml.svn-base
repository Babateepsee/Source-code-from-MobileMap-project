	<!-- Layout POI information @author hien.vu / -->

	<!-- Buttons to open linear layout PoiInformation -->
	<LinearLayout android:id="@+id/linearLayout_ButtonViewPOI"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:background="@android:drawable/alert_light_frame"
		android:orientation="horizontal" android:layout_below="@+id/LL_Search"
		android:layout_above="@+id/main_poi_information_linearlayout_1">
		<Button android:text="View POI" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/btnViewPOI"></Button>
		<Button android:text="View POI detail" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:id="@+id/btnViewDetailPOI"></Button>
	</LinearLayout>  <!-- The end Buttons to open linearLayout1 -->

	<!-- Begin layout POI information -->
	<LinearLayout android:id="@+id/main_poi_information_linearlayout_PoiInformation"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:background="@android:drawable/alert_light_frame"
		android:orientation="vertical" android:layout_alignParentBottom="true"
		android:visibility="gone">
		<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/main_poi_information_relativelayout_solid"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/settings_header_raw">

			<Button android:id="@+id/main_poi_information_button_favorite"
				android:layout_width="25dp" android:layout_height="25dp"
				android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
				android:background="@drawable/star_big_off"></Button>

			<RatingBar android:id="@+id/main_poi_information_rating_poi"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:numStars="5" android:stepSize="1.0" android:rating="3"
				style="?android:attr/ratingBarStyleSmall" android:layout_toRightOf="@+id/main_poi_information_button_favorite"
				android:paddingLeft="2dp"></RatingBar>

			<LinearLayout android:id="@+id/main_poi_information_linearlayout_detail"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:orientation="vertical" android:layout_below="@+id/main_poi_information_rating_poi"
				android:layout_alignLeft="@+id/main_poi_information_rating_poi">
				<TextView android:text="Name"
					android:id="@+id/main_poi_information_label_name"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
				<TextView android:text="Address"
					android:id="@+id/main_poi_information_label_address"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
				<TextView android:text="Longtitude"
					android:id="@+id/main_poi_information_label_longtitude"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
				<TextView android:text="Latitude"
					android:id="@+id/main_poi_information_label_latitude"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
				<TextView android:text="Description"
					android:id="@+id/main_poi_information_label_description"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#000000"></TextView>
			</LinearLayout>

			<ImageButton android:id="@+id/main_poi_information_imagebutton_close"
				android:layout_width="30dp" android:layout_height="30dp"
				android:background="@drawable/btn_close_normal"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"></ImageButton>

			<ImageButton android:id="@+id/main_poi_information_imagebutton_expand"
				android:layout_width="36px" android:layout_height="40px"
				android:src="@drawable/icon_down" android:background="@drawable/btn_square_overlay_normal_1"
				android:layout_toLeftOf="@+id/main_poi_information_imagebutton_close"
				android:layout_alignParentTop="true"></ImageButton>

			<ImageView android:id="@+id/main_poi_information_imagebutton_picture"
				android:layout_width="70dp" android:layout_height="70dp"
				android:contentDescription="Image adress" android:adjustViewBounds="true"
				android:layout_below="@+id/main_poi_information_imagebutton_close"
				android:layout_alignRight="@+id/main_poi_information_imagebutton_close"
				android:src="@drawable/icon"></ImageView>

			<LinearLayout android:id="@+id/main_poi_information_linearlayout_button"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="60dp" android:background="@android:drawable/bottom_bar"
				android:layout_below="@+id/main_poi_information_linearlayout_detail"
				android:paddingTop="5dip">
				<Button android:id="@+id/main_poi_information_button_center"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Center" android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_navigate"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.2" android:text="Navigate"
					android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_call"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Call" android:textSize="12dp"></Button>
				<Button android:id="@+id/main_poi_information_button_search"
					android:background="@android:drawable/btn_default"
					android:layout_width="0dip" android:layout_height="fill_parent"
					android:layout_weight="1.0" android:text="Search" android:textSize="12dp"
					android:state_pressed="true"></Button>
			</LinearLayout>

			<LinearLayout android:id="@+id/main_poi_information_linearlayout_advancedButton"
				android:orientation="vertical" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:background="@android:drawable/bottom_bar"
				android:visibility="gone" android:layout_below="@+id/main_poi_information_linearlayout_button">
				<Button android:text="Advaced view"
					android:id="@+id/main_poi_information_button_advance"
					android:layout_width="fill_parent" android:layout_height="fill_parent"
					android:background="@android:drawable/btn_default"></Button>
			</LinearLayout>

		</RelativeLayout>
	</LinearLayout> <!-- The end layout POI information -->
</RelativeLayout>