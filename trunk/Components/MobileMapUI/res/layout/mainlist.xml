<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:background="@drawable/settings_header_raw">
		<ImageView android:layout_height="wrap_content" android:id="@+id/imageView1"
			android:src="@drawable/icon" android:layout_width="wrap_content"></ImageView>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/linearLayout2"
			android:orientation="vertical" android:background="@drawable/settings_header_raw">
			<TextView android:text="Name" android:id="@+id/label_name"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000" android:textSize="24dp"></TextView>
			<TextView android:text="Address" android:id="@+id/label_address"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:text="Longtitude" android:id="@+id/label_longtitude"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:text="Latitude" android:id="@+id/label_latitude"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000"></TextView>
			<TextView android:text="Description" android:id="@+id/label_description"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="#000000"></TextView>
			<RatingBar android:id="@+id/rating_poi"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:numStars="5" android:stepSize="1.0" android:rating="3"
				style="?android:attr/ratingBarStyleSmall" android:layout_toRightOf="@+id/button_favorite"
				android:paddingLeft="2dp"></RatingBar>
		</LinearLayout>

	</LinearLayout>
	<ListView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@android:id/list" />
</LinearLayout>

