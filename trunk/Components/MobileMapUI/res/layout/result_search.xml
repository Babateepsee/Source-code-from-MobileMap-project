<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/result_search_linearlayout_result_search"
	android:layout_height="wrap_content" android:layout_width="fill_parent">
	-
	-
	<LinearLayout android:id="@+id/result_search_linearlayout_search"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="match_parent" android:gravity="center">
		<EditText android:id="@+id/result_search_edittext_search"
			android:background="@android:drawable/editbox_background_normal"
			android:layout_height="40dip" android:layout_width="260dip"
			android:hint="Search...!!!" android:singleLine="true" />
		-
		-
		<LinearLayout android:orientation="vertical"
			android:layout_height="wrap_content" android:layout_width="30dip">
			<Button android:id="@+id/result_search_button_search"
				android:layout_height="30dip" android:layout_width="fill_parent"
				android:background="@android:drawable/ic_menu_search" />
			<Button android:id="@+id/result_search_button_expand"
				android:layout_gravity="center" android:layout_height="10dip"
				android:layout_width="wrap_content" android:background="@android:drawable/arrow_down_float" />
		</LinearLayout>
	</LinearLayout>
	-
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ListView android:id="@+id/result_search_listview_result"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_marginTop="5dip" />
		-
		<LinearLayout android:id="@+id/result_search_linearlayout_expand"
			android:orientation="vertical" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:layout_gravity="center_horizontal"
			android:background="@android:drawable/alert_dark_frame">
			-
			<LinearLayout android:orientation="horizontal"
				android:id="@+id/result_search_linearlayout_category"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="5dip">
				<TextView android:id="@+id/result_search_textview_category"
					android:text="Category" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="@android:color/black"
					android:layout_gravity="center|center_horizontal" />
				<Spinner android:id="@+id/result_search_spinner_category"
					android:layout_height="40dip" android:layout_width="220dip"
					android:layout_marginLeft="10dip" />
			</LinearLayout>
		</LinearLayout>
		<Button android:id="@+id/result_search_button_review"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true" android:textColor="@android:color/black"
			android:background="@android:drawable/ic_media_previous" />
	</RelativeLayout>
</LinearLayout>